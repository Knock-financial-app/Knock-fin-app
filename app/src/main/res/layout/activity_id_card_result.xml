<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신분증 인식 결과"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- 신분증 이미지 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F0F0F0"
                android:contentDescription="신분증 이미지" />
        </androidx.cardview.widget.CardView>

        <!-- 정보 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름: 홍길동"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/residentNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주민번호: 123456-1******"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />
                <TextView
                    android:id="@+id/driverLicenseNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운전면허번호: 12-34-567890-12"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/issueDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발급일: 2023.01.01"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소: 서울특별시 강남구"
                    android:textSize="18sp"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/retryButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="재촬영"
                android:textSize="16sp"
                android:backgroundTint="#757575" />

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="확인"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>