<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Theme_color_main"
    android:fitsSystemWindows="true">
    <ImageButton
        android:contentDescription="뒤로 가기"
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_left"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:text="신분증을 선택하세요"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="사진이 포함된 신분증으로 본인 확인을 진행합니다.\n선택한 신분증은 이전 단계에서 입력한 정보와 일치해야 합니다."
        android:textColor="#AAAAAA"
        android:textSize="12dp"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp">
        <RadioButton
            android:id="@+id/rbIdCard"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_id_option"
            android:button="@null"
            android:drawableEnd="@drawable/selector_check_icon"
            android:drawablePadding="16dp"
            android:paddingHorizontal="24dp"
            android:text="주민등록증/운전면허증"
            android:textColor="@color/Theme_color_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rbPassport"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_id_option"
            android:button="@null"
            android:drawableEnd="@drawable/selector_check_icon"
            android:drawablePadding="16dp"
            android:paddingHorizontal="24dp"
            android:text="한국/외국 여권"
            android:textColor="@color/Theme_color_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <RadioButton
            android:id="@+id/rbMobileId"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_id_option"
            android:button="@null"
            android:drawableEnd="@drawable/selector_check_icon"
            android:drawablePadding="16dp"
            android:paddingHorizontal="24dp"
            android:text="모바일 신분증"
            android:textColor="@color/Theme_color_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <RadioButton
            android:id="@+id/rbForeignerId"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/selector_id_option"
            android:button="@null"
            android:drawableEnd="@drawable/selector_check_icon"
            android:drawablePadding="16dp"
            android:paddingHorizontal="24dp"
            android:text="외국인등록증 (국내거소증/영주증)"
            android:textColor="@color/Theme_color_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
    </RadioGroup>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_tab_active"
        android:text="계좌 만들기"
        android:textColor="@color/Theme_color_main"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>